#!/bin/bash
# Test job for recording per-token entropy and varentropy
# Runs 2 training steps with GRPO (n=4 rollouts per prompt)
# Total rollouts: 256 prompts × 4 rollouts × 2 steps = 2048 rollouts
#
# Entropy data saved to: checkpoints/TinyZero/entropy_test/entropy_data/

#SBATCH --job-name=tinyzero_entropy
#SBATCH --partition=gpu_h100
#SBATCH --nodes=1
#SBATCH --gres=gpu:4
#SBATCH --cpus-per-task=36
#SBATCH --mem=240G
#SBATCH --time=01:00:00

source ~/.bashrc
conda activate zero

export HF_HOME=/scratch-shared/$USER/huggingface
mkdir -p $HF_HOME

cd $HOME/TinyZero

export N_GPUS=4
export ROLLOUT_TP_SIZE=2
export DATA_DIR=$PWD
export BASE_MODEL=deepseek-ai/DeepSeek-R1-Distill-Qwen-1.5B
export EXPERIMENT_NAME=entropy_test

python3 -m verl.trainer.main_ppo \
    data.train_files=$DATA_DIR/train.parquet \
    data.val_files=$DATA_DIR/test.parquet \
    data.train_batch_size=256 \
    data.max_prompt_length=256 \
    data.max_response_length=2048 \
    actor_rollout_ref.model.path=$BASE_MODEL \
    actor_rollout_ref.model.use_remove_padding=True \
    actor_rollout_ref.actor.use_dynamic_bsz=True \
    actor_rollout_ref.actor.optim.lr=1e-6 \
    actor_rollout_ref.actor.ppo_mini_batch_size=72 \
    actor_rollout_ref.actor.ppo_micro_batch_size=12 \
    actor_rollout_ref.rollout.n=4 \
    actor_rollout_ref.rollout.tensor_model_parallel_size=$ROLLOUT_TP_SIZE \
    actor_rollout_ref.rollout.gpu_memory_utilization=0.4 \
    actor_rollout_ref.rollout.log_prob_micro_batch_size=12 \
    actor_rollout_ref.ref.log_prob_micro_batch_size=6 \
    critic.optim.lr=1e-5 \
    critic.model.path=$BASE_MODEL \
    critic.ppo_mini_batch_size=72 \
    critic.ppo_micro_batch_size=12 \
    algorithm.adv_estimator=grpo \
    algorithm.use_kl_in_reward=False \
    algorithm.kl_ctrl.kl_coef=0.001 \
    agent.adaptive_window.enable=False \
    agent.entropy_logging.enable=True \
    trainer.n_gpus_per_node=$N_GPUS \
    trainer.nnodes=1 \
    trainer.total_training_steps=2 \
    trainer.save_freq=-1 \
    trainer.test_freq=-1 \
    trainer.val_before_train=False \
    trainer.logger=['console','wandb'] \
    trainer.project_name=TinyZero \
    trainer.experiment_name=$EXPERIMENT_NAME \
    trainer.default_local_dir=checkpoints/TinyZero/$EXPERIMENT_NAME \
    2>&1 | tee verl_entropy_test.log

echo ""
echo "Entropy data saved to: checkpoints/TinyZero/$EXPERIMENT_NAME/entropy_data/"
echo "Files: entropy_step_000000.pt, entropy_step_000001.pt"
echo ""
echo "Each file contains:"
echo "  - old_entropy: (1024, response_len) - Shannon entropy per token"
echo "  - old_varentropy: (1024, response_len) - Varentropy per token"
echo "  - attention_mask: to identify valid tokens"
echo "  - responses: token IDs"
