#!/bin/bash
#SBATCH --job-name=tinyzero_test
#SBATCH --partition=gpu_h100
#SBATCH --nodes=1
#SBATCH --gres=gpu:2
#SBATCH --cpus-per-task=18
#SBATCH --mem=120G
#SBATCH --time=4:00:00

source ~/.bashrc
conda activate zero

export HF_HOME=/scratch-shared/$USER/huggingface
mkdir -p $HF_HOME

cd $HOME/TinyZero

export N_GPUS=2
export ROLLOUT_TP_SIZE=2
export DATA_DIR=$PWD
export BASE_MODEL=deepseek-ai/DeepSeek-R1-Distill-Qwen-1.5B
export EXPERIMENT_NAME=tinyzero_2gpu_test

python3 -m verl.trainer.main_ppo \
    data.train_files=$DATA_DIR/train.parquet \
    data.val_files=$DATA_DIR/test.parquet \
    data.train_batch_size=128 \
    data.max_prompt_length=256 \
    data.max_response_length=2048 \
    actor_rollout_ref.model.path=$BASE_MODEL \
    actor_rollout_ref.model.use_remove_padding=True \
    actor_rollout_ref.actor.use_dynamic_bsz=True \
    actor_rollout_ref.actor.optim.lr=1e-6 \
    actor_rollout_ref.actor.ppo_mini_batch_size=32 \
    actor_rollout_ref.actor.ppo_micro_batch_size=8 \
    actor_rollout_ref.actor.entropy_coeff=0 \
    actor_rollout_ref.rollout.tensor_model_parallel_size=2 \
    actor_rollout_ref.rollout.gpu_memory_utilization=0.5 \
    actor_rollout_ref.rollout.log_prob_micro_batch_size=8 \
    actor_rollout_ref.ref.log_prob_micro_batch_size=8 \
    critic.optim.lr=1e-5 \
    critic.model.path=$BASE_MODEL \
    critic.ppo_mini_batch_size=32 \
    critic.ppo_micro_batch_size=8 \
    agent.adaptive_window.enable=True \
    agent.adaptive_window.initial_window=512 \
    agent.adaptive_window.max_window=2048 \
    algorithm.use_kl_in_reward=False \
    trainer.n_gpus_per_node=2 \
    trainer.nnodes=1 \
    trainer.total_epochs=2 \
    trainer.save_freq=-1 \
    trainer.test_freq=50 \
    trainer.val_before_train=False \
    trainer.logger=['console','wandb'] \
    trainer.project_name=TinyZero \
    trainer.experiment_name=$EXPERIMENT_NAME 2>&1 | tee verl_test.log
